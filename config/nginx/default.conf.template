upstream api {
    server web:8000;
}

server {
    listen ${PORT};
    server_name localhost;

    location / {
        proxy_pass http://api;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host:$server_port;
        proxy_redirect off;
    }

    location /static/ {
        alias /static/;
    }
}
